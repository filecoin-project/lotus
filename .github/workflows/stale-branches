# .github/workflows/stale-branches.yml

name: Stale Branches

on:
  schedule:
    - cron: '0 12 * * *'
    
permissions:
  issues: write
  contents: write

jobs:
  stale_branches:
    runs-on: ubuntu-latest
    steps:
    - name: Stale Branches
      uses: crs-k/stale-branches@v5.0.0
      with:
        repo-token: '${{ secrets.GITHUB_TOKEN }}'
        days-before-stale: 180
        days-before-delete: 360
        branches-filter-regex: ''^(?!release)'
        dry-run: false