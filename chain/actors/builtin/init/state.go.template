func (s *state{{.v}}) ForEachActor(cb func(id abi.ActorID, address address.Address) error) error {
	addrs, err := adt{{.v}}.AsMap(s.store, s.State.AddressMap{{if (ge .v 3)}}, builtin{{.v}}.DefaultHamtBitwidth{{end}})
	if err != nil {
		return err
	}
