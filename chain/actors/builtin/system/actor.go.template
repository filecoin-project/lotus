	switch av {
{{range .versions}}
	case actorstypes.Version{{.}}:
		return make{{.}}(store{{if (ge . 8)}}, builtinActors{{end}})
{{end}}
}
	return nil, xerrors.Errorf("unknown actor version %d", av)
}

