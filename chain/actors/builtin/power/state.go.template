	out := state{{.v}}{store: store}
	{{if (le .v 2)}}
		em, err := adt{{.v}}.MakeEmptyMap(store).Root()
		if err != nil {
			return nil, err
		}

		emm, err := adt{{.v}}.MakeEmptyMultimap(store).Root()
		if err != nil {
